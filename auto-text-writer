<body>
    <script>
        const text = "Lorem ipsum dolor, sit amet consectetur adipisicing elit. Porro tempore dignissimos distinctio quis?(●'◡'●)";

let index=0;

setInterval(() => {
    document.body.innerText = text.slice(0,index);
    
    index++;

    if(index>text.length){
        index=0;
    }
},100);

    </script>
